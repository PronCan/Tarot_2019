<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanum_gothic"
        android:gravity="center"
        android:text="양자택일 타로 결과"
        android:textColor="#fff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/result_or_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanum_gothic"
        android:gravity="center"
        android:text="~~을(를) 선택하는것이 좋습니다."
        android:textColor="#fff"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/result_card_img1"
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/card" />

            <ImageView
                android:id="@+id/result_card_img2"
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_card_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nanum_gothic"
                android:gravity="center"
                android:text="카드이름"
                android:textColor="#fff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/result_card_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:fontFamily="@font/nanum_gothic"
                android:gravity="center"
                android:text="카드이름"
                android:textColor="#fff"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_card_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/nanum_gothic"
            android:lineHeight="27dp"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbars="vertical"
            android:text="설명"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_result"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/nanum_gothic_bold"
        android:text="종료"
        android:textColor="#fff" />

</LinearLayout>